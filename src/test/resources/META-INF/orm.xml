<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm" version="3.0">

    <entity class="org.example.models.entities.Document">
        <attributes>
            <basic name="content">
                <column name="content" column-definition="BYTEA"/>
            </basic>
        </attributes>
    </entity>

    <entity class="org.example.models.entities.DocumentChunk">
        <attributes>
            <basic name="content">
                <column name="content" column-definition="TEXT"/>
            </basic>
            <basic name="embedding">
                <column name="embedding" column-definition="VECTOR"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>